<!-- /app/views/user/usershow.html.erb -->
<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<p>name <%= @user.name %></p>
<p>introduction <%= @user.introduction %></p>
<% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
  
  <h1>New book</h1>
<%= form_for(@book, url: books_path) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
    

    <div>
        <%= f.label :Title %><br>
        <%= f.text_field :title, autofocus: true %>
    </div>
    <div>
        <%= f.label :Opinion %><br>
        <%= f.text_area :body %>
    </div>
    <div><%= f.submit "Create Book" %></div>
<% end %>


<table>
    <thead>
        <h1>Books</h1>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg"%></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
                
                

            </tr>
        <% end %>
    </tbody>
</table>