<div class="container">
  <div class="row">
    <div class="col-xs-3">
<h1>User info</h1>
<%= form_with model:@user, local:true do |f| %>
<%= render 'layouts/error_messages_user', model: f.object %>

  <h4>name</h4>
  <%= f.text_field :name %>
  <h4>画像</h4>
  <%= f.attachment_field :profile_image %>
  <h4>introduction</h4>
  <%= f.text_area :introduction %>
  <%= f.submit 'Update User' %>
<% end %>
    </div>
  </div>
</div>