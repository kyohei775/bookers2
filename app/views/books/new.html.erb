<h1>New book</h1>
<span>現在ログイン中のユーザー：<%= current_user.name %></span>

<%= form_for(@book, url: books_path) do |f| %>
    <div>
        <%= f.label :Title %><br>
        <%= f.text_field :title, autofocus: true %>
    </div>
    <div>
        <%= f.label :Opinion %><br>
        <%= f.text_area :body %>
    </div>
    <div><%= f.submit "Create Book" %></div>
<% end %>


<table>
    <thead>
        <tr>
            <th>投稿者名</th>
            <th>タイトル</th>
            <th>本文</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><%= book.user.name %></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
            </tr>
        <% end %>
    </tbody>
</table>
